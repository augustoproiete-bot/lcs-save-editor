    </Reference>
    <Reference Include="GTASaveData.LCS">
      <HintPath>..\..\gta-save-data\GTASaveData.LCS\bin\Debug\netstandard2.0\GTASaveData.LCS.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
