        <uint32 name="highestLevelSlashTv"/>
        <uint32 name="moneyMadeWithSlashTv"/>
        <uint32 name="totalKillsOnSlashTv"/>
        <uint32 name="_packagesSmuggled"/>
        <uint32 name="_smugglersWasted"/>
